<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/IVCommunityPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_groups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/TVCommunityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/communityname"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/IVCommunityPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/IVCommunityPic"
        app:layout_constraintBottom_toBottomOf="@id/IVCommunityPic"
        android:paddingStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
