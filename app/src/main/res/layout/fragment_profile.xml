<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <View
            android:id="@+id/spacer_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/spacer_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingTop="50dp"
                android:focusable="true"
                android:screenReaderFocusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="User Profile"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:accessibilityHeading="true" />

                <TextView
                    android:id="@+id/TVUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Name: John Doe"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/TVContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Contact no.: 012-3456789"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="#E0E0E0"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/TVDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="I'm a housewife who enjoys cooking delicious food. Feel free to drop by!"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/BtnEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/editprofile"
            android:backgroundTint="@color/mediumgreen"
            android:textColor="@color/darkgreen"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/card_user_info"
            app:layout_constraintStart_toStartOf="@+id/card_user_info"
            app:layout_constraintTop_toBottomOf="@+id/card_user_info" />

        <androidx.cardview.widget.CardView
            android:id="@+id/options_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/card_user_info"
            app:layout_constraintStart_toStartOf="@+id/card_user_info"
            app:layout_constraintTop_toBottomOf="@+id/BtnEditProfile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BtnSavedRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="Saved recipes"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@android:drawable/ic_menu_save"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:focusable="true"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:importantForAccessibility="no"/>

                <TextView
                    android:id="@+id/BtnAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="About us"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:focusable="true"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:importantForAccessibility="no"/>

                <TextView
                    android:id="@+id/BtnInviteFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="Invite friends"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@android:drawable/ic_menu_share"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:focusable="true"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:importantForAccessibility="no"/>

                <TextView
                    android:id="@+id/BtnGeneralFAQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="General FAQ"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@android:drawable/ic_menu_help"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ic_profile_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/IVAvatar"
                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                android:contentDescription="Avatar Picture" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/BtnLogOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A5D6A7"
            android:text="Log Out"
            android:textColor="@color/darkgreen"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/options_card"
            app:layout_constraintStart_toStartOf="@+id/options_card"
            app:layout_constraintTop_toBottomOf="@+id/options_card"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
