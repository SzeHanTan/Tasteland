<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".Shopping.ui.ShoppingList">

    <TextView
        android:id="@+id/TVShoppingListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_corner_background"
        android:elevation="4dp"
        android:fontFamily="@font/angkor"
        android:gravity="start"
        android:paddingStart="65dp"
        android:padding="16dp"
        android:text="@string/shoppinglist"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BtnAddFoodItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/round_button_background"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/TVShoppingListTitle"
        app:layout_constraintEnd_toEndOf="@+id/TVShoppingListTitle"
        app:layout_constraintTop_toTopOf="@+id/TVShoppingListTitle" />

    <ImageButton
        android:id="@+id/BtnClearChecked"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_button_background"
        android:backgroundTint="#FFCDD2"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintBottom_toBottomOf="@+id/TVShoppingListTitle"
        app:layout_constraintStart_toEndOf="@+id/BtnAddFoodItem"
        app:layout_constraintTop_toTopOf="@+id/TVShoppingListTitle"
        app:layout_constraintVertical_bias="0.4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVShoppingList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_shopping_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVShoppingListTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>