<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".Food.ui.MyFoodFragment">

    <!-- "My Food" White Box -->
    <TextView
        android:id="@+id/TVMyFoodTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:accessibilityHeading="true"
        android:background="@drawable/rounded_corner_background"
        android:elevation="4dp"
        android:fontFamily="@font/angkor"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/myfood"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/BtnAddFoodItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_button_background"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_new_food_item"
        app:layout_constraintBottom_toBottomOf="@+id/TVMyFoodTitle"
        app:layout_constraintEnd_toEndOf="@+id/TVMyFoodTitle"
        app:layout_constraintTop_toTopOf="@+id/TVMyFoodTitle" />

    <!-- SCROLLABLE AREA FOR LISTS -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_add_food_container"
        app:layout_constraintTop_toBottomOf="@+id/TVMyFoodTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PREVIOUS SECTION -->
            <TextView
                android:id="@+id/TvPreviousHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previousfood"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:accessibilityHeading="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVPrevious"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_food" />

            <!-- TODAY SECTION -->
            <TextView
                android:id="@+id/TvTodayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/todayfood"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:accessibilityHeading="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_food" />

            <!-- FUTURE SECTION -->
            <TextView
                android:id="@+id/TvFutureHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/futurefood"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:accessibilityHeading="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVFuture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_food" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FrameLayout container for the "Add Food" panel -->
    <FrameLayout
        android:id="@+id/fragment_add_food_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/PGMyFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>