<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED STATE -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#33000000"/> <!-- subtle shadow -->
                    <corners android:radius="25dp" />
                </shape>
            </item>
            <!-- Foreground layer -->
            <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="3dp"
                        android:color="#3a5176" />
                    <corners android:radius="25dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- DEFAULT STATE -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/> <!-- subtle default shadow -->
                    <corners android:radius="25dp" />
                </shape>
            </item>
            <!-- Foreground layer -->
            <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#dde0e5" />
                    <corners android:radius="25dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
