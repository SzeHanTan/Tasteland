<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Shadow layer (bottom-right) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#22000000"/> <!-- subtle shadow -->
                    <corners android:radius="25dp" />
                </shape>
            </item>

            <!-- Foreground layer -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="25dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#33000000" /> <!-- subtle border -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
